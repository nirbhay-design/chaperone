<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Always there for you!</h1>
    <ul>
    <%userswithSecrets.forEach(function(user){%>
      <%user.secret.forEach(function(i,index){%>
      <p class="secret-text"><%=i['Text']%></p>
      <%i["Comments"].forEach(function(cmt){%>
        <p><%=cmt%></p>
        <%});%>
        <form action="/comment" method=POST>
          <input type="text" class="form-control text-center" name="comment" placeholder="Write">
          <input class="ghost" name="id" id="say" value=<%=user._id%>>
          <input class="ghost" name="index" id="hy" value=<%=index%>>
          <button type="submit">+</button>
        </form>
      <%});%>

    <%});%>
    </ul>
    <!-- <p class="secret-text">Jack Bauer is my hero.</p> -->
    <hr>
    
    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button">Write Something</a>
  </div>
</div>

<%- include('partials/footer') %>
