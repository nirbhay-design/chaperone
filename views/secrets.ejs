<%- include('partials/header') %>

<div class="jumbotron text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Always there for you!</h1>
    
    <ul>
    <%userswithSecrets.forEach(function(user){%>
      <%user.secret.forEach(function(i,index){%>
      <p class="secret-text"><%=i['Text']%></p>
      <%i["Comments"].forEach(function(cmt){%>
        <p class='getcomment'><%=cmt%></p>
        <%});%>
        
        <form action="/comment" method=POST id='coolform'>
          <input type="text" class="form-control text-center" name="comment" placeholder="share your views/secrets and click on add button to post it" id='coolinp'>
          <input class="ghost" name="id" id="say" value=<%=user._id%>>
          <input class="ghost" name="index" id="hy" value=<%=index%>>
          <button type="submit" class='btn btn-success' id='coolbtn'>add</button>
        </form>
        <hr style="border : 2px white solid"/>
      <%});%>

    <%});%>
    </ul>
    
    
    <a class="btn btn-danger btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-success btn-lg" href="/submit" role="button">Write Something</a>
  </div>
</div>
<!-- btn btn-dark btn-lg   btn btn-light btn-lg-->
<%- include('partials/footer') %>
